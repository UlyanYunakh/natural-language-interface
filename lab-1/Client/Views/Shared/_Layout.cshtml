<!DOCTYPE html>
<html>

<head>
    <title>DictionaryApp</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<body style="overflow-y: scroll">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4">
                <div class="sticky-top pt-2">
                    @await Html.PartialAsync("_TextForm")
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <button id="addForm1" class="nav-link bg-light active" type="button"
                                style="border-bottom-color: #f8f9fa">Способ 1</button>
                        </li>
                        <li class="nav-item">
                            <button id="addForm2" class="nav-link" type="button">Cпособ 2</button>
                        </li>
                    </ul>
                    <div id="add1">
                        @await Html.PartialAsync("_Form", new DictionaryItem())
                    </div>
                    <div id="add2" class="d-none">
                        @await Html.PartialAsync("_TextWordForm", new DictionaryItem())
                    </div>
                </div>
            </div>
            <div class="col-lg-8 pt-2">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
    <script>
        $("#addForm1").on("click", function () {
            $("#addForm2").removeClass("bg-light active");
            $("#addForm2").css("border-bottom-color", "#dee2e6");
            $("#add2").addClass("d-none");
            $("#add1").removeClass("d-none");
            $(this).addClass("bg-light active");
            $(this).css("border-bottom-color", "#f8f9fa");
        });
    </script>
    <script>
        $("#addForm2").on("click", function () {
            $("#addForm1").removeClass("bg-light active");
            $("#addForm1").css("border-bottom-color", "#dee2e6");
            $("#add1").addClass("d-none");
            $("#add2").removeClass("d-none");
            $(this).addClass("bg-light active");
            $(this).css("border-bottom-color", "#f8f9fa");
        });
    </script>
    @RenderSection("Scripts", false)
</body>

</html>